<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajat.paribhraman.DiscoveryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="217dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Discover"
            android:textAlignment="center"
            android:textColor="#0066cc"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.062" />

        <Button
            android:id="@+id/Cities"
            android:layout_width="194dp"
            android:layout_height="138dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="17dp"
            android:layout_toLeftOf="@+id/Forts"
            android:layout_toStartOf="@+id/Forts"
            android:background="@drawable/f"
            android:fontFamily="@font/emblema_one"
            android:text="Destination"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="193dp" />

        <Button
            android:id="@+id/Forts"
            android:layout_width="194dp"
            android:layout_height="138dp"
            android:layout_above="@+id/Museums"
            android:layout_toEndOf="@+id/Lakes"
            android:layout_toRightOf="@+id/Lakes"
            android:text="Forts"
            android:background="@drawable/chittorgarhfort"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/emblema_one"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="193dp" />

        <Button
            android:id="@+id/Lakes"
            android:layout_width="194dp"
            android:layout_height="138dp"
            android:layout_alignBottom="@+id/Museums"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Cities"
            android:text="Lakes"
            android:background="@drawable/u"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/emblema_one"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="193dp" />

        <Button
            android:id="@+id/Museums"
            android:layout_width="194dp"
            android:layout_height="138dp"
            android:layout_below="@+id/Cities"
            android:layout_toEndOf="@+id/Lakes"
            android:layout_toRightOf="@+id/Lakes"
            android:text="Museums"
            android:background="@drawable/m"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/emblema_one"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="224dp"
            tools:layout_editor_absoluteY="191dp" />

        <Button
            android:id="@+id/Palaces"
            android:layout_width="194dp"
            android:layout_height="138dp"
            android:layout_below="@+id/Lakes"
            android:layout_toLeftOf="@+id/Museums"
            android:layout_toStartOf="@+id/Museums"
            android:text="Palaces"
            android:background="@drawable/p"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/emblema_one"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="63dp"
            tools:layout_editor_absoluteY="288dp" />

        <Button
            android:id="@+id/wildlife"
            android:layout_width="194dp"
            android:layout_height="138dp"
            android:layout_alignBottom="@+id/Palaces"
            android:layout_below="@+id/Lakes"
            android:layout_toEndOf="@+id/Lakes"
            android:layout_toRightOf="@+id/Lakes"
            android:text="Wildlife"
            android:background="@drawable/w"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/emblema_one"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="286dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
